<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Miscord.Client.Controls"
             xmlns:services="using:Miscord.Client.Services"
             mc:Ignorable="d"
             x:Class="Miscord.Client.Controls.MessageSearchContent"
             x:DataType="controls:MessageSearchContent"
             Width="600">

    <UserControl.Styles>
        <!-- Search input style -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="#202225"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#dcddde"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="TextBox.search-input:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="TextBox.search-input /template/ TextBlock#PART_Watermark">
            <Setter Property="Foreground" Value="#72767d"/>
        </Style>

        <!-- ListBox style -->
        <Style Selector="ListBox.results-list">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- ListBoxItem style -->
        <Style Selector="ListBox.results-list > ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style Selector="ListBox.results-list > ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBox.results-list > ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Result item style -->
        <Style Selector="Border.result-item">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Border.result-item:pointerover">
            <Setter Property="Background" Value="#3f4248"/>
        </Style>
        <Style Selector="ListBoxItem:selected Border.result-item">
            <Setter Property="Background" Value="#5865f2"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#36393f"
            CornerRadius="8"
            Padding="0"
            BorderBrush="#202225"
            BorderThickness="1"
            MaxHeight="500">
        <DockPanel>
            <!-- Search Input -->
            <Border DockPanel.Dock="Top" Padding="16,16,16,8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox x:Name="SearchInput"
                             Grid.Column="0"
                             Classes="search-input"
                             Watermark="Search messages..."
                             Text="{Binding ViewModel.SearchQuery, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}, Mode=TwoWay}"/>
                    <Button Grid.Column="1"
                            Margin="8,0,0,0"
                            Background="#5865f2"
                            Foreground="White"
                            Padding="16,8"
                            CornerRadius="4"
                            Command="{Binding SearchCommand, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}"
                            IsEnabled="{Binding !ViewModel.IsLoading, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}">
                        <TextBlock Text="Search"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Status / Loading -->
            <Border DockPanel.Dock="Top" Padding="16,4,16,8">
                <Grid>
                    <TextBlock Text="{Binding ViewModel.StatusText, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}"
                               Foreground="#72767d"
                               FontSize="12"
                               IsVisible="{Binding !ViewModel.IsLoading, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8"
                                IsVisible="{Binding ViewModel.IsLoading, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}">
                        <TextBlock Text="Searching..." Foreground="#72767d" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Keyboard Hints -->
            <Border DockPanel.Dock="Bottom"
                    Padding="16,8"
                    Background="#2f3136"
                    IsVisible="{Binding ViewModel.HasResults, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Background="#202225" CornerRadius="3" Padding="4,2">
                            <TextBlock Text="Enter" Foreground="#72767d" FontSize="11"/>
                        </Border>
                        <TextBlock Text="search" Foreground="#72767d" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Background="#202225" CornerRadius="3" Padding="4,2">
                            <TextBlock Text="Esc" Foreground="#72767d" FontSize="11"/>
                        </Border>
                        <TextBlock Text="close" Foreground="#72767d" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- No Results Message -->
            <TextBlock Text="No messages found"
                       Foreground="#72767d"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,20"
                       IsVisible="{Binding ViewModel.ShowNoResults, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}"/>

            <!-- Results List -->
            <ListBox x:Name="ResultsList"
                     Classes="results-list"
                     ItemsSource="{Binding ViewModel.Results, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}}"
                     SelectedIndex="{Binding ViewModel.SelectedIndex, RelativeSource={RelativeSource AncestorType=controls:MessageSearchContent}, Mode=TwoWay}"
                     Padding="8,0,8,8"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="services:MessageSearchResult">
                        <Border Classes="result-item"
                                PointerPressed="OnResultItemPointerPressed">
                            <StackPanel Spacing="4">
                                <!-- Channel and Author -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="#" Foreground="#72767d" FontSize="12"/>
                                    <TextBlock Text="{Binding ChannelName}"
                                               Foreground="#5865f2"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="-" Foreground="#72767d" FontSize="12"/>
                                    <TextBlock Text="{Binding Message.AuthorEffectiveDisplayName}"
                                               Foreground="#ffffff"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding Message.CreatedAt, StringFormat='{}{0:MMM d, yyyy}'}"
                                               Foreground="#72767d"
                                               FontSize="11"/>
                                </StackPanel>

                                <!-- Message Content -->
                                <TextBlock Text="{Binding Message.Content}"
                                           Foreground="#dcddde"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           MaxLines="2"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Border>
</UserControl>

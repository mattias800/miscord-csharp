<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Snacka.Client.Controls"
             xmlns:vm="using:Snacka.Client.ViewModels"
             xmlns:conv="using:Snacka.Client.Converters"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.VoiceChannelContentView"
             x:DataType="controls:VoiceChannelContentView">

    <Border Background="#36393f">
        <DockPanel>
            <!-- Voice Channel Header -->
            <Border DockPanel.Dock="Top" Background="#36393f" Padding="16,12" BorderThickness="0,0,0,1" BorderBrush="#202225">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ui:SymbolIcon Symbol="Speaker2"
                               Foreground="#3ba55c"
                               FontSize="18"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedVoiceChannel.Name, RelativeSource={RelativeSource AncestorType=controls:VoiceChannelContentView}, FallbackValue='Voice Channel'}"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Audio Device Warning Banner -->
            <Border DockPanel.Dock="Top"
                    Background="#faa61a"
                    Padding="16,12"
                    IsVisible="{Binding ShowAudioDeviceWarning, RelativeSource={RelativeSource AncestorType=controls:VoiceChannelContentView}}">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <ui:SymbolIcon Grid.Column="0"
                               Symbol="Important"
                               FontSize="18"
                               Foreground="#1a1a1a"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                        <TextBlock Text="Audio devices not configured"
                                   Foreground="#1a1a1a"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                        <TextBlock Text="Go to Settings to select your microphone and speakers."
                                   Foreground="#333333"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    <Button Grid.Column="2"
                            Content="Open Settings"
                            Background="#1a1a1a"
                            Foreground="White"
                            Padding="12,6"
                            CornerRadius="4"
                            VerticalAlignment="Center"
                            Command="{Binding OpenSettingsCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceChannelContentView}}"/>
                </Grid>
            </Border>

            <!-- Voice Channel Video Streams Grid -->
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding VoiceChannelContent.VideoStreams, RelativeSource={RelativeSource AncestorType=controls:VoiceChannelContentView}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"
                                       Margin="16"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:VideoStreamViewModel">
                            <!-- Video Stream Tile with Control Bar -->
                            <Border Width="320"
                                    Margin="8"
                                    CornerRadius="8"
                                    Background="#2f3136"
                                    ClipToBounds="True"
                                    DoubleTapped="OnVideoTileDoubleTapped"
                                    Tag="{Binding}">
                                <Grid RowDefinitions="200,Auto">
                                    <!-- Video Area (row 0) - Hardware overlay renders here -->
                                    <Border Grid.Row="0"
                                            CornerRadius="8,8,0,0"
                                            ClipToBounds="True"
                                            Background="#1e1f22">
                                        <Grid>
                                            <!-- Video content (only shown when watching) -->
                                            <Grid IsVisible="{Binding ShowVideoContent}">
                                                <!-- Hardware-accelerated video (zero-copy GPU rendering) -->
                                                <controls:HardwareVideoViewHost Decoder="{Binding HardwareDecoder}"
                                                                                HorizontalAlignment="Stretch"
                                                                                VerticalAlignment="Stretch"/>

                                                <!-- Software-decoded video (bitmap rendering) -->
                                                <Image Source="{Binding VideoBitmap}"
                                                       Stretch="UniformToFill"
                                                       IsVisible="{Binding VideoBitmap, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                                <!-- Avatar placeholder (shown when no video from any source) -->
                                                <StackPanel VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            IsVisible="{Binding ShowAvatarPlaceholder}">
                                                    <Border Width="80" Height="80"
                                                            CornerRadius="40"
                                                            Background="#5865f2"
                                                            HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding Username, Converter={x:Static conv:FirstCharConverter.Instance}}"
                                                                   Foreground="White"
                                                                   FontSize="36"
                                                                   FontWeight="Bold"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Watch button overlay for remote screen shares -->
                                            <StackPanel VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Spacing="12"
                                                        IsVisible="{Binding ShowWatchButton}">
                                                <Border Width="56" Height="56"
                                                        CornerRadius="28"
                                                        Background="#5865f2"
                                                        HorizontalAlignment="Center">
                                                    <ui:SymbolIcon Symbol="Share"
                                                               FontSize="24"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <TextBlock Text="{Binding Username, StringFormat='{}{0} is sharing'}"
                                                           Foreground="#dcddde"
                                                           FontSize="13"
                                                           HorizontalAlignment="Center"/>
                                                <Button Background="#5865f2"
                                                        Foreground="White"
                                                        Padding="14,8"
                                                        CornerRadius="4"
                                                        HorizontalAlignment="Center"
                                                        Cursor="Hand"
                                                        Click="OnWatchScreenShareClick"
                                                        Tag="{Binding}">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <ui:SymbolIcon Symbol="View" VerticalAlignment="Center" FontSize="12" Foreground="White"/>
                                                        <TextBlock Text="Watch" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="13"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>

                                            <!-- Speaking indicator ring (only for camera streams) -->
                                            <Border CornerRadius="8,8,0,0"
                                                    BorderThickness="3"
                                                    BorderBrush="#3ba55c"
                                                    IsVisible="{Binding ShowSpeakingIndicator}"/>
                                        </Grid>
                                    </Border>

                                    <!-- Control Bar (row 1) - Always visible, not covered by overlay -->
                                    <Border Grid.Row="1"
                                            Background="#2f3136"
                                            Padding="10,8"
                                            CornerRadius="0,0,8,8">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Left: Username and stream label -->
                                            <StackPanel Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        Spacing="8"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Username}"
                                                           Foreground="White"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           MaxWidth="100"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <Border Background="#5865f2"
                                                        CornerRadius="3"
                                                        Padding="5,2"
                                                        IsVisible="{Binding StreamLabel, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                    <TextBlock Text="{Binding StreamLabel}"
                                                               Foreground="White"
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Center: Volume slider for remote streams with audio -->
                                            <StackPanel Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        IsVisible="{Binding ShowVolumeSlider}">
                                                <ui:SymbolIcon Symbol="Speaker2"
                                                           Foreground="#b9bbbe"
                                                           FontSize="11"
                                                           VerticalAlignment="Center"/>
                                                <Slider Width="70"
                                                        Minimum="0"
                                                        Maximum="200"
                                                        Value="{Binding VolumePercent}"
                                                        VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding VolumePercent, StringFormat={}{0}%}"
                                                           Foreground="#b9bbbe"
                                                           FontSize="10"
                                                           Width="30"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Right: Action buttons (only for screen shares when watching) -->
                                            <StackPanel Grid.Column="2"
                                                        Orientation="Horizontal"
                                                        Spacing="4"
                                                        VerticalAlignment="Center">
                                                <StackPanel.IsVisible>
                                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                        <Binding Path="IsRemoteScreenShare"/>
                                                        <Binding Path="IsWatching"/>
                                                    </MultiBinding>
                                                </StackPanel.IsVisible>

                                                <!-- Fullscreen button -->
                                                <Button Padding="6,4"
                                                        Background="#40ffffff"
                                                        BorderThickness="0"
                                                        CornerRadius="4"
                                                        Cursor="Hand"
                                                        Click="OnFullscreenButtonClick"
                                                        Tag="{Binding}"
                                                        ToolTip.Tip="Fullscreen (or double-click video)">
                                                    <ui:SymbolIcon Symbol="FullScreenMaximize" Foreground="White" FontSize="14"/>
                                                </Button>

                                                <!-- Stop Watching button -->
                                                <Button Padding="6,4"
                                                        Background="#ed4245"
                                                        BorderThickness="0"
                                                        CornerRadius="4"
                                                        Cursor="Hand"
                                                        Click="OnStopWatchingClick"
                                                        Tag="{Binding}"
                                                        ToolTip.Tip="Stop Watching">
                                                    <ui:SymbolIcon Symbol="Dismiss" Foreground="White" FontSize="12"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>

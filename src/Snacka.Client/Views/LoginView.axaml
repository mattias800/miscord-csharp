<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Snacka.Client.ViewModels"
             x:Class="Snacka.Client.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             x:CompileBindings="False">
    <Border Background="#36393f" Padding="40">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="400"
                    Spacing="20">

            <TextBlock Text="Welcome back!"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="We're so excited to see you again!"
                       FontSize="14"
                       Foreground="#b9bbbe"
                       HorizontalAlignment="Center"/>

            <StackPanel Spacing="8" Margin="0,20,0,0">
                <TextBlock Text="EMAIL"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#b9bbbe"/>
                <TextBox Text="{Binding Email}"
                         Watermark="Enter your email"
                         Background="#202225"
                         Foreground="White"
                         BorderThickness="0"
                         CornerRadius="4"
                         Padding="12"/>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="PASSWORD"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#b9bbbe"/>
                <TextBox Text="{Binding Password}"
                         PasswordChar="*"
                         Watermark="Enter your password"
                         Background="#202225"
                         Foreground="White"
                         BorderThickness="0"
                         CornerRadius="4"
                         Padding="12"/>
            </StackPanel>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#f04747"
                       FontSize="14"
                       IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                       TextWrapping="Wrap"/>

            <Button Command="{Binding LoginCommand}"
                    Content="Log In"
                    Background="#5865f2"
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Padding="12"
                    CornerRadius="4"
                    FontWeight="SemiBold"
                    IsEnabled="{Binding !IsLoading}"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="4"
                        IsVisible="{Binding CanRegister}">
                <TextBlock Text="Need an account?"
                           Foreground="#b9bbbe"
                           FontSize="14"/>
                <Button Command="{Binding SwitchToRegisterCommand}"
                        Content="Register"
                        Background="Transparent"
                        Foreground="#00aff4"
                        BorderThickness="0"
                        Padding="0"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServerInfo": {
    "Name": "Miscord Server",
    "Description": "A self-hosted Discord alternative",
    "AllowRegistration": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Miscord;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "SecretKey": "ThisIsADevelopmentSecretKeyThatShouldBeChangedInProduction-AtLeast32Chars!",
    "Issuer": "Miscord",
    "Audience": "Miscord",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  }
}
